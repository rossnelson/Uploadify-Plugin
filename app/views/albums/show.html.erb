<% title h(@album.title) %>

<%= stylesheet( 'dust_album','uploadify') %>
<%= javascript( 'jquery-1.4.2') %>

<%= render :partial => "upload_script" %>

<p>
  <strong>Title:</strong>
  <%=h @album.title %>
</p>
<p>
  <strong>Desc:</strong>
  <%=h @album.desc %>
</p>

<h3 id="photos_count"><%= pluralize(@album.photos.size, "Photo")%></h3>
<div id="uploads"> 
	<%= render :partial => @album.photos %>
</div>

<div class="clear"></div>

<h3>Upload a Photo</h3> 
<% form_for @photo, :html => {:multipart => true} do |f| %> 
	<%= f.hidden_field :album_id, "value" => @album.id %>
	<p>
		<%= f.file_field :file %> </p>
	<p>
		<%= f.submit "Upload" %>
	</p>
<% end %>

<p>
  <%= link_to "Edit", edit_album_path(@album) %> |
  <%= link_to "Destroy", @album, :confirm => 'Are you sure?', :method => :delete %> |
  <%= link_to "View All", albums_path %>
</p>
